{
  "title": "Remap Arrow + modifiers to HJKL",
  "rules": [
    {
      "description": "Cmd+Opt-Ctrl Arrows → Cmd+Opt-Ctrl HJKL",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": { "mandatory": ["command", "option", "control"] }
          },
          "to": [
            { "key_code": "h", "modifiers": ["command", "option", "control"] }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": { "mandatory": ["command", "option", "control"] }
          },
          "to": [
            { "key_code": "l", "modifiers": ["command", "option", "control"] }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": { "mandatory": ["command", "option", "control"] }
          },
          "to": [
            { "key_code": "k", "modifiers": ["command", "option", "control"] }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
            "modifiers": { "mandatory": ["command", "option", "control"] }
          },
          "to": [
            { "key_code": "j", "modifiers": ["command", "option", "control"] }
          ]
        }
      ]
    },
    {
      "description": "Cmd+Ctrl+Shift+Opt Arrows → Cmd+Ctrl+Shift+Opt HJKL",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": ["command", "control", "shift", "option"]
            }
          },
          "to": [
            {
              "key_code": "h",
              "modifiers": ["command", "control", "shift", "option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": {
              "mandatory": ["command", "control", "shift", "option"]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": ["command", "control", "shift", "option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": ["command", "control", "shift", "option"]
            }
          },
          "to": [
            {
              "key_code": "k",
              "modifiers": ["command", "control", "shift", "option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
            "modifiers": {
              "mandatory": ["command", "control", "shift", "option"]
            }
          },
          "to": [
            {
              "key_code": "j",
              "modifiers": ["command", "control", "shift", "option"]
            }
          ]
        }
      ]
    }
  ]
}
