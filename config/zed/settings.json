// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "icon_theme": "Material Icon Theme",
  "format_on_save": "off",
  "autosave": "on_focus_change",
  "theme": {
    "mode": "system",
    "light": "Ros√© Pine Dawn",
    "dark": "Nord"
  },
  "ui_font_size": 14,
  "minimap": { "show": "always", "display_in": "active_editor" },
  "buffer_font_size": 13.0,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "vim_mode": true,
  "relative_line_numbers": true,
  "base_keymap": "VSCode",
  "tab_size": 4, // This is the default, but for some reason it does not apply unless explicitly defined?
  "debugger": {
    "dock": "right"
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-3-7-sonnet"
    },
    "dock": "right",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet"
    }
  },
  "terminal": {
    "dock": "right",
    "font_family": "JetBrainsMono Nerd Font",
    "font_size": 13
  },
  "chat_panel": {
    "button": "when_in_call"
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "journal": {
    "hour_format": "hour24"
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "features": "all"
        }
      }
    }
  },
  "languages": {
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": {
        "external": {
          "command": "prettierd",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": {
        "external": {
          "command": "prettierd",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": {
        "external": {
          "command": "prettierd",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "JSONC": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "prettierd",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "JSON": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "prettierd",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "YAML": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "prettierd",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },
  "file_types": {
    "Elisp": ["kbd"]
  }
}
